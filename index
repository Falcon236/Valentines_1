    <script>
        let progress = 0;

        function goToLevel2() {
            document.getElementById('screen1').classList.add('hidden');
            document.getElementById('screen2').classList.remove('hidden');
        }

        function fillMeter() {
            progress += 5; // Increases by 5% every click
            document.getElementById('progressBar').style.width = progress + '%';
            
            // Fun text updates
            if(progress < 30) {
                document.getElementById('loading-text').innerText = "Crossing the oceans...";
            } else if (progress < 60) {
                document.getElementById('loading-text').innerText = "Fighting the bad internet...";
            } else if (progress < 90) {
                document.getElementById('loading-text').innerText = "Almost there! Keep tapping!";
            }

            if (progress >= 100) {
                setTimeout(goToLevel3, 500);
            }
        }

        function goToLevel3() {
            document.getElementById('screen2').classList.add('hidden');
            document.getElementById('screen3').classList.remove('hidden');
            triggerConfetti();
        }

        // Simple confetti effect
        function triggerConfetti() {
            const colors = ['#ff4d6d', '#ffccd5', '#ffffff'];
            for (let i = 0; i < 50; i++) {
                const confetti = document.createElement('div');
                confetti.style.position = 'absolute';
                confetti.style.left = Math.random() * 100 + 'vw';
                confetti.style.top = '-10px';
                confetti.style.width = '10px';
                confetti.style.height = '10px';
                confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                confetti.style.animation = `float ${Math.random() * 3 + 2}s linear infinite`;
                document.body.appendChild(confetti);
            }
        }
    </script>
